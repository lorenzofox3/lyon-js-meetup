extends ./app-story.layout.pug
include ../story-point.mixin.pug

block heading
    h2#custom-elements Custom Elements

block story
    +storyPoint('extends')
        p Extends native HTML Elements
    +storyPoint('reactive-attributes')
        p Define reactive attributes
    +storyPoint('lifecycles')
        p Element lifecycles
    +storyPoint('registry')
        p Element registry

block code

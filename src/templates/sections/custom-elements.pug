        code-point(step-extends='', step-reactive-attributes='faded')
            code-point(step-extends='active', step-reactive-attributes='')
                include:code(line=1) ./custom-elements.js
            br
            div
                include:code(line=2) ./custom-elements.js
            div
                include:code(line=3) ./custom-elements.js
            div
                include:code(line=4) ./custom-elements.js
        br
        code-point(step-extends='inline-hidden', step-reactive-attributes='', step-lifecycles='faded')
            div
                include:code(line=6) ./custom-elements.js
